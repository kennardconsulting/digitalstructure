body {
	padding-top: 40px;
	padding-bottom: 40px;
	background-color: #f5f5f5;

	.form-login {
		width: 610px;
		margin: 0 auto 20px;
	}
	
	h1 {
		margin-bottom: 20px;
	}
		
	#entity-list {
		margin: 20px;
		
		a {
			display: block;
			width: 200px;
			margin: 5px auto;
		}
	}
	
	#loading-indicator {
		position: fixed;
		top: 250px;
		text-align: center;
		width: 100%;
	}
		
	.top-buttons {
		text-align: center;
		padding: 10px;
	}

	#results {
		table {
			width: 100%;
		}
	}
		
	.bottom-buttons {
		position: fixed;
		border-top: 1px solid #cccccc;
		background-color: #eeeeee;
		width: 100%;
		left: 0px;
		bottom: 0px;
		padding: 5px;
		text-align: center;
		
		.text-error {
			line-height: 40px;
		}
		
		button {
			margin-right: 5px;
		}
	}
}